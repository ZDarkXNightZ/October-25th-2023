#include <iostream>  // Include  input/output stream library

using namespace std;  // Use the standard namespace

int main()
{
    string secret_password = "acer";  // The secret password.
    string user_guess;  // This string variable will be the password inputted by the user

    cout << "Enter secret password" << endl;  // Ask the user for the password.
    cin >> user_guess;  // sets the string variable as the inputted password.

    if (user_guess == secret_password)  // if the user input matches the secret password
    {
        cout << "You got it!" << endl;  // If the passwords matches, display a success message.
    }
    else {
        cout << "Try again." << endl;  // If the passwords don't match, display a retry message.
    }
}

